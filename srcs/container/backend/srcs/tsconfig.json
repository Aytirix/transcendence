{
	"compilerOptions": {
		"target": "ES2024",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationDir": "./dist/types",
		"paths": {
			"@i18n": ["./src/i18n"],
			"@tools": ["./src/tools"],
			"@Middleware": ["./src/Middleware"],
			"@*": ["./src/types/*"],
			"@schemas/*": ["./src/schemas/*"],
			"@models/*": ["./src/models/*"],
			"@controllers/*": ["./src/controllers/*"],
			"@session": ["./src/session"],
			"@wsPacman/*": ["./src/WebSocket/Pacman/*"],
		  }
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"dist"
	]
}