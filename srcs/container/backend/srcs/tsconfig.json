{
	"compilerOptions": {
		"target": "ES2024",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationDir": "./dist/types",
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"dist"
	]
}