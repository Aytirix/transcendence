{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
	},
	"include": ["src", "src/types/**/*.d.ts"],
	"exclude": [
		"node_modules",
		"dist"
	]
}